{
  "name": "ngrx-forms",
  "version": "3.2.2",
  "description": "Proper integration of forms in Angular 4 applications using ngrx",
  "module": "ngrx/forms.es5.js",
  "es2015": "ngrx/forms.js",
  "main": "bundles/forms.umd.js",
  "scripts": {
    "build": "node build.js",
    "test": "karma start",
    "test-headless": "karma start --browsers ChromeHeadless",
    "test-no-progress": "karma start --reporters spec,karma-typescript",
    "test-watch": "karma start --single-run=false",
    "test-watch-headless": "karma start --single-run=false --browsers ChromeHeadless",
    "lint": "tslint --project .",
    "pack-lib": "npm pack ./dist",
    "publish-lib": "npm publish ./dist",
    "report-coverage": "codecov ./coverage/lcov/lcov.info",
    "example-install": "npm run build && npm pack ./dist && cd example-app && cross-var npm install ../ngrx-forms-$npm_package_version.tgz && cd .."
  },
  "typings": "./forms.d.ts",
  "author": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/MrWolfZ/ngrx-forms.git"
  },
  "bugs": {
    "url": "https://github.com/MrWolfZ/ngrx-forms/issues"
  },
  "homepage": "https://github.com/MrWolfZ/ngrx-forms",
  "keywords": [
    "angular",
    "javascript",
    "typescript",
    "ngrx",
    "redux"
  ],
  "license": "MIT",
  "peerDependencies": {
    "@angular/core": ">=6.1.0-rc.3",
    "@angular/common": ">=6.1.0-rc.3",
    "@angular/forms": ">=6.1.0-rc.3",
    "@ngrx/store": ">=6.0.1",
    "typescript": ">=2.8.0"
  },
  "devDependencies": {
    "@angular/common": "6.1.0-rc.3",
    "@angular/compiler": "6.1.0-rc.3",
    "@angular/compiler-cli": "6.1.0-rc.3",
    "@angular/core": "6.1.0-rc.3",
    "@angular/forms": "6.1.0-rc.3",
    "@angular/platform-browser": "6.1.0-rc.3",
    "@angular/platform-browser-dynamic": "6.1.0-rc.3",
    "@ngrx/store": "6.0.1",
    "@types/jasmine": "2.8.6",
    "@types/node": "9.6.5",
    "chalk": "2.3.2",
    "codecov": "3.0.2",
    "codelyzer": "4.4.2",
    "core-js": "2.5.7",
    "cross-var": "1.1.0",
    "jasmine-core": "2.6.4",
    "karma": "2.0.4",
    "karma-chrome-launcher": "2.2.0",
    "karma-jasmine": "1.1.1",
    "karma-spec-reporter": "0.0.32",
    "karma-typescript": "3.0.13",
    "karma-typescript-es6-transform": "1.0.4",
    "reflect-metadata": "0.1.12",
    "rollup": "0.57.1",
    "rollup-plugin-node-resolve": "3.3.0",
    "rxjs": "6.2.1",
    "shelljs": "0.8.1",
    "sorcery": "0.10.0",
    "tslint": "5.10.0",
    "tslint-eslint-rules": "5.2.0",
    "typescript": "2.8.3",
    "uglify-js": "3.4.2",
    "yargs": "11.0.0",
    "zone.js": "0.8.26"
  }
}
